{% extends 'layout/layout' %}

{% block title %}
	{{ translate('Ranking - TopGuild') }}
{% endblock title %}

{% block content %}

	<div class="table-responsive">
		<table class="table table-striped table-hover">
			<thead>
			<tr>
				<th>#</th>
				<th>{{ translate('Guild') }}</th>
				<th>{{ translate('Level') }}</th>
			</tr>
			</thead>
			{% set i = (ranking.getCurrentPageNumber() - 1) * ranking.getDefaultItemCountPerPage() + 1 %}
			{% for key, guild in ranking %}
				<tr>
					<td>{{ i }}</td>
					<td><a href="{{ url('PServerCMS/guild', {'id':guild.getId()}) }}">{{ guild.getName() }}</a></td>
					<td>{{ guild.getLevel() }}</td>
				</tr>
				{% set i = i + 1 %}
			{% endfor %}
		</table>
	</div>

	{{ paginationControl(ranking, 'Sliding', 'p-server-cms/paginator', {'route' : 'PServerCMS/ranking', 'params': {'action' : 'top-guild'}}) }}

{% endblock content %}