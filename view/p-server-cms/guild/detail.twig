{% extends 'layout/layout' %}

{% block title %}
	{{ translate('Guild') ~ ' - ' ~ guild.getName() }}
{% endblock title %}

{% block content %}
	<div class="table-responsive">
		<table class="table table-striped table-hover">
			<tr>
				<th>{{ translate('Guild') }}</th>
				<th>{{ guild.getName() }}</th>
			</tr>
			<tr>
				<th>{{ translate('Level') }}</th>
				<th>{{ guild.getLevel() }}</th>
			</tr>
		</table>
	</div>

	<h2>Member</h2>


	<div class="table-responsive">
		<table class="table table-striped table-hover">
			<thead>
			<tr>
				<th>#</th>
				<th>{{ translate('Character') }}</th>
				<th>{{ translate('Level') }}</th>
			</tr>
			</thead>
			{% set i = (member.getCurrentPageNumber() - 1) * member.getCurrentItemCount() + 1 %}
			{% for key, player in member %}
				<tr>
					<td>{{ i }}</td>
					<td><a href="{{ url('character', {'id':player.getId()}) }}">{{ player.getName() }}</a></td>
					<td>{{ player.getLevel() }}</td>
				</tr>
				{% set i = i + 1 %}
			{% endfor %}
		</table>
	</div>

	{{ paginationControl(member, 'Sliding', 'p-server-cms/paginator', {'route' : 'guild', 'params' : {'id' : guild.getId} }) }}

{% endblock content %}